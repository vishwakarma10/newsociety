@model Society.Models.Complaints
<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header">
                    Add Complaints
                </div>
                <div class="card-body">
                    @using (Html.BeginForm("Complaints", "Owner", FormMethod.Post))
                    {
                        <div class="form-group">
                            <label class="required">Complaint Title</label>
                            @Html.ValidationMessageFor(m=>m.ComplaintTitle)
                            @Html.TextBoxFor(m => m.ComplaintTitle, new { @class = "form-control", @placeholder = "Complaint Title" })
                        </div>

                        <div class="form-group">
                            <label class="required">Description</label>
                            @Html.HiddenFor(m => m.FlatId)
                            @Html.ValidationMessageFor(m => m.Description)
                            @Html.TextBoxFor(m => m.Description, new { @class = "form-control", @placeholder = "Description" })
                        </div>


                        <div class="form-group">
                            <input type="submit" name="submit" value="Add Complaints" class="btn btn-success" />
                            @if (ViewBag.message != "")
                            {
                                <span class="badge badge-danger">@ViewBag.message</span>
                            }
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
<style>
    .required:after {
        content: " *";
        color: red;
    }
</style>
